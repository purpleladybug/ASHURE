<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ohio_state.cse.ashure.DashboardActivity">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:id="@+id/question_card">
    <EditText android:id="@+id/question_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/question_prompt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:visibility="visible" />

    <Button android:id="@+id/question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:hint="@string/question_button"
        android:layout_below="@+id/question_area"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />
</RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_below="@+id/question_card"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:text=""
            android:id="@+id/watson_response"
            android:background="@drawable/bg_card"
            android:visibility="invisible"
            android:layout_below="@+id/question_card"
            android:layout_marginTop="25dp"
            />




</RelativeLayout>
